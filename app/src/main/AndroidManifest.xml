<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera runtime permission required for CameraX capture -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- SDK 30+ 패키지 가시성: Play Store 존재 확인을 위해 선언 -->
    <queries>
        <package android:name="com.android.vending" />
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlcoholicTimer"
        tools:targetApi="31">

        <!-- 메인 액티비티: StartActivity → FaceWeightEntryActivity로 교체 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.faceweight.FaceWeightEntryActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 기존 StartActivity: 런처 해제 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.start.StartActivity"
            android:exported="false"
            android:theme="@style/Theme.AlcoholicTimer.Splash"
            android:windowSoftInputMode="adjustPan" />

        <!-- 기록 화면 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.records.RecordsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer" />

        <!-- 모든 기록 화면 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.records.AllRecordsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer" />

        <!-- 레벨 화면 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.level.LevelActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer" />

        <!-- 설정 화면 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.settings.SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer" />

        <!-- 세부 기록 화면 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.detail.DetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer" />

        <!-- 별명 편집 화면 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.profile.NicknameEditActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer" />

        <!-- 사용자 기록 추가 화면 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.addrecord.AddRecordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer" />

        <!-- 앱 정보 화면 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.about.AboutActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer" />

        <!-- 오픈 라이선스 상세 화면 -->
        <activity
            android:name="com.sweetapps.faceweight.feature.about.AboutLicensesActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer" />

        <!-- FaceWeight 카메라 캡처 액티비티 (스텁) -->
        <activity
            android:name="com.sweetapps.faceweight.feature.faceweight.FaceWeightCaptureActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AlcoholicTimer" />

        <!-- FileProvider for sharing saved camera images -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
